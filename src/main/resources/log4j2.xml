<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="resource-service" monitorInterval="5"
               packages="org.springframework">

    <Properties>
        <Property name="CONSOLE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} |%X{traceId} %X{spanId}|%t|%m%n| %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue} %style{}{magenta} [%M] %style{%40C}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%xEx}</Property>
    </Properties>

    <Appenders>
        <Console name="console-appender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
            <LevelRangeFilter maxLevel="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console-appender"/>
        </Root>
        <Logger name="org.zalando.logbook" level="TRACE" additivity="false">
            <AppenderRef ref="console-appender"/>
        </Logger>
        <Logger name="net.ttddyy.dsproxy.listener" level="DEBUG" additivity="false">
            <AppenderRef ref="console-appender" />
        </Logger>

        <Logger name="org.apache.kafka" level="INFO" additivity="false"/>
        <Logger name="org.springframework.boot.autoconfigure" level="WARN" additivity="false"/>
        <Logger name="org.springframework.boot.actuate.endpoint.web.servlet" level="WARN" additivity="false"/>
        <Logger name="org.springframework.web.servlet" level="WARN" additivity="false" />
    </Loggers>

</Configuration>
